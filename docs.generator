#!/usr/bin/csh -f

echo php documentation generator
echo === ============= =========
echo go to the php source directory
echo set the name of the documentation output directory
set docudir = docs

echo clean the output directory
sudo rm -fvR $docudir
mkdir $docudir

echo the following command will generate the php documentation if docker is installed
docker run --rm -v ${PWD}:/data phpdoc/phpdoc:3 -d . -t $docudir

echo final clean
unset docudir
